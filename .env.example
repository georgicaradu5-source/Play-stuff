# X Agent Unified - Environment Configuration Template
# Copy this to .env and replace all placeholders with your actual values

# === AUTHENTICATION MODE ===
# Choose: "tweepy" (OAuth 1.0a) or "oauth2" (OAuth 2.0 PKCE - recommended)
X_AUTH_MODE=oauth2

# === OAUTH 2.0 CREDENTIALS (Recommended for modern apps) ===
# Get these from https://developer.twitter.com/en/portal/dashboard
# TODO: put your OAuth2 client ID here
X_CLIENT_ID=YOUR_CLIENT_ID
# TODO: put your OAuth2 client secret here
X_CLIENT_SECRET=YOUR_CLIENT_SECRET
# TODO: put your OAuth2 redirect URI here (use http://localhost:8080/callback for local)
X_REDIRECT_URI=http://localhost:8080/callback

# === OAUTH 1.0A CREDENTIALS (Alternative - for legacy apps) ===
# Only needed if X_AUTH_MODE=tweepy
# TODO: put your OAuth1 API key here (optional)
X_API_KEY=YOUR_API_KEY_OPTIONAL
# TODO: put your OAuth1 API secret here (optional)
X_API_SECRET=YOUR_API_SECRET_OPTIONAL
# TODO: put your OAuth1 access token here (optional)
X_ACCESS_TOKEN=YOUR_ACCESS_TOKEN_OPTIONAL
# TODO: put your OAuth1 access secret here (optional)
X_ACCESS_SECRET=YOUR_ACCESS_SECRET_OPTIONAL

# === AI CONTENT GENERATION ===
# Required for AI-powered features (content generation, sentiment analysis)
# TODO: put your OpenAI API key here
OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# === AUTOMATION SETTINGS ===
# Maximum automation level (set by setup script)
AUTOMATION_LEVEL=maximum
# Minimal human approval required (set by setup script)
HUMAN_APPROVAL_REQUIRED=false
# Enable telemetry for monitoring (optional)
ENABLE_TELEMETRY=false

# === OPTIONAL TELEMETRY ===
# OpenTelemetry configuration (for advanced monitoring)
OTEL_SERVICE_NAME=x-agent-unified
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_TRACES_SAMPLER=traceidratio
OTEL_TRACES_SAMPLER_ARG=0.1

# === DATABASE ===
# SQLite database path (auto-created)
DATABASE_URL=sqlite:///data/agent_unified.db

# === LOGGING ===
# Log level for debugging
LOG_LEVEL=INFO
